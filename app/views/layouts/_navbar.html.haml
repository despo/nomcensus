.toolbar
  =link_to "http://github.com/despo", class: 'github', title: "Github" do
    =fa_icon "github"
  =link_to "/help", class: 'help', title: "Questions" do
    =fa_icon "question-circle"
  =link_to "http://github.com/despo", class: 'bugs', title: "Bugs" do
    =fa_icon "bug"
  =link_to "http://twitter.com/despo", class: 'author', title: "@despo" do
    =fa_icon "twitter"
  - if logged_in?
    =link_to invitations_path, class: 'author', title: "logout #{email}" do
      =fa_icon "bars"
    =link_to logout_path, class: 'author', title: "logout #{email}" do
      =fa_icon "sign-out"
  - else
    =link_to new_session_path, class: 'author', title: "Sign in " do
      =fa_icon "sign-in"
